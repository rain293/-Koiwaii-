<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kk.soft.co.jp.sys.mapper.MessageInfoMstMapper">
	<select id="selectAll"
		resultType="kk.soft.co.jp.sys.model.MessageInfoMstModel">
		SELECT * FROM mp_auth.ctmif3
	</select>
	<select id="findbyid"
		resultType="kk.soft.co.jp.sys.model.MessageInfoMstModel">
		SELECT * FROM mp_auth.ctmif3 where (id = #{id});
	</select>
	<select id="findbyname"
		resultType="kk.soft.co.jp.sys.model.MessageInfoMstModel">
		SELECT * FROM mp_auth.ctmif3 where (name = #{name});
	</select>
	<insert id="insert"
		parameterType="kk.soft.co.jp.sys.model.MessageInfoMstModel"
		useGeneratedKeys="true" keyProperty="id">
		INSERT INTO
		mp_auth.ctmif3
		(name,email,password,gender,marriage,privacy)
		VALUES
		(#{name},#{email},#{password},#{gender},#{marriage},#{privacy})
	</insert>

	<select id="checkEmail"
		resultType="kk.soft.co.jp.sys.model.MessageInfoMstModel"
		parameterType="kk.soft.co.jp.sys.model.MessageInfoMstModel">
		SELECT * FROM mp_auth.ctmif3 WHERE (email = #{email});
	</select>

	<select id="checkSignin"
		resultType="kk.soft.co.jp.sys.model.MessageInfoMstModel"
		parameterType="kk.soft.co.jp.sys.model.MessageInfoMstModel">
		SELECT * FROM mp_auth.ctmif3
		WHERE ((email = #{email})
		AND (password = #{password}))
	</select>

</mapper>